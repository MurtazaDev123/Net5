
@{
    ViewBag.Title = "Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadSection {
    <style>
    </style>
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Stores
        </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Common</a></li>
                <li class="breadcrumb-item active" aria-current="page">Stores</li>
            </ol>
        </nav>
    </div>

    <div class="card">
        <div class="card-body">

            <div class="row">
                <div class="col-sm-12">
                    <button id="add_popup" class="btn btn-primary btn-sm" style="width: 100px;"><i class="fa fa-plus"></i> Add New</button>
                    <button id="edit_popup" class="btn btn-info btn-sm" style="width: 100px;" disabled><i class="fa fa-edit"></i> Edit</button>
                    <button id="btn_delete" class="btn btn-danger btn-sm" style="width: 100px;" disabled><i class="fa fa-trash"></i> Delete</button>
                    <button id="btn_restore" class="btn btn-info btn-sm" style="width: 100px; display: none;" disabled><i class="fa fa fa-window-restore"></i> Restore</button>
                    <a href="/Home/Dashboard" class="btn btn-secondary btn-sm" style="width: 100px;"><i class="fa fa-arrow-circle-left"></i> Back</a>

                    <div class="float-right">
                        <a class="btn btn-success btn-sm" id="btn_current" style="width: 100px;" href="#">Current</a>
                        <a class="btn btn-outline-danger btn-sm" id="btn_archive" style="width: 100px;" href="#">Archive</a>
                    </div>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-12">
                    <div class="table-responsive table-current-listing">
                        <table id="current-listing" class="table table-striped table-hover table-bordered" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>City</th>
                                    <th>Mall</th>
                                    <th class="no-sort">Image</th>
                                    <th>Store Name</th>
                                    <th>Address</th>
                                    <th>ContactNo</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <div class="table-responsive table-archive-listing" style="display: none;">
                        <table id="archive-listing" class="table table-striped table-hover table-bordered" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>City</th>
                                    <th>Mall</th>
                                    <th class="no-sort">Image</th>
                                    <th>Store Name</th>
                                    <th>Address</th>
                                    <th>ContactNo</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal_setup" tabindex="-1" role="dialog" aria-labelledby="modal_setup" data-backdrop="static" data-keyboard="false" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal_title">Add/Edit Store</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form class="form-sample" method="post" id="entry-form" action="/Store/AdStore">
                    <div class="alert alert-danger error_msg" style="display: none;">This is error</div>

                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="txtid">ID</label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control" id="txtid" name="txtid" readonly />
                                </div>
                                <label class="col-sm-5"><small>* Auto Generated</small></label>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="txtname">Store Name <small style="color: red;">*</small></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="txtname" name="txtname" autocomplete="off" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="ddlcity">City <small style="color: red;">*</small></label>
                                <div class="col-sm-9">
                                    <select id="ddlcity" name="ddlcity" class="form-control"></select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="ddlmall">Mall <small style="color: red;">*</small></label>
                                <div class="col-sm-9">
                                    <select id="ddlmall" name="ddlmall" class="form-control"></select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="description">Description</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" id="description" name="description" autocomplete="off" rows="4" cols="50" /></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="txtaddress">Address</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="txtaddress" name="txtaddress" autocomplete="off" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="txtcontact">ContactNo</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="txtcontact" name="txtcontact" autocomplete="off" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" for="txtemail"></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="txtemail" name="txtemail" autocomplete="off" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Status</label>
                                <div class="col-sm-9">
                                    <div class="form-check form-check-flat form-check-primary">
                                        <label class="form-check-label">
                                            <input type="checkbox" id="chkActive" name="chkActive" class="form-check-input" checked='checked'> Active
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <form id="form1" method="post">
                                <img id="profile_picture_img" src="/content/images/placeholder/product.jpg" style="width: 100%; height: auto;" alt="profile image">
                                <a id="profile_picture" href="#">Select Image</a>
                                <input name="image" type="file" style="display: none;" id="hidden_file" />
                                <input type="hidden" id="hidden_image_name" name="hidden_image_name" value="" />
                            </form>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" id="btnSaveRecord" class="btn btn-success">Save Record</button>
                <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


@section FooterSection {
    <script>

        var currentListURL = '/Admin/CurrentStores';
        var archiveListURL = '/Admin/ArchiveStore';
        var searchByIdURL = '/Admin/StoreById';
        var moveToArchiveURL = '/Admin/MoveToArchiveStore';
        var redirectionURL = '/Admin/Store';
        var saveURL = '/Admin/SaveStore';

        var current_table = bindGrid($('#current-listing'), currentListURL);
        var archive_table = bindGrid($('#archive-listing'), archiveListURL);

        fillDropDown("/Admin/CurrentCities", $("#ddlcity"), undefined, 1, "/Admin/MallsByCity/", $("#ddlmall"), undefined, undefined, true, $("#modal_setup"));

        $('#current-listing tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');

                $("#edit_popup").attr('disabled', 'disabled');
                $("#btn_delete").attr('disabled', 'disabled');
            }
            else {
                current_table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');

                $("#edit_popup").removeAttr('disabled');
                $("#btn_delete").removeAttr('disabled');
            }
        });

        $('#archive-listing tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');

                $("#btn_restore").attr('disabled', 'disabled');
            }
            else {
                archive_table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');

                $("#btn_restore").removeAttr('disabled');
            }
        });

        $("#add_popup").on("click", function (e) {
            e.preventDefault();
            resetPopup();
            $("#modal_setup").modal('show');
        });

        $("#edit_popup").on("click", function (e) {
            e.preventDefault();

            var id = current_table.$('tr.selected')[0].id;
            resetPopup();

            $("#modal_setup").modal('show');

            $.ajax({
                type: "POST",
                url: searchByIdURL,
                data: { 'id': id },
                success: function (data) {
                    $("#txtid").val(data["Id"]);
                    $("#txtname").val(data["Name"]);
                    $("#ddlcity").val(data["City"]["Id"]).trigger('change');
                    $("#ddlmall").val(data["Mall"]["Id"]).trigger('change');
                    $("#description").val(data["Description"]);
                    $("#hidden_image_name").val(data["LogoImage"]);
                    if (data["ItemPicture"] != "") {
                        $("#profile_picture_img").attr('src', '/content/uploads/stores/' + data['LogoImage'])
                    }
                    $("#txtaddress").val(data["Address"]);
                    $("#txtcontact").val(data["ContactNo"]);
                    $("#txtemail").val(data["Email"]);
                    $("#chkActive").prop('checked', data["Active"]);
                },
                failure: function (data) {
                    alert(data);
                },
                always: function () {
                    console.log('i am in always');
                }
            });
        });

        $("#btn_delete").on("click", function (e) {
            e.preventDefault();
            var id = current_table.$('tr.selected')[0].id;
            moveRecord(id, 2, moveToArchiveURL, redirectionURL);
        });

        $("#btn_restore").on("click", function (e) {
            e.preventDefault();
            var id = archive_table.$('tr.selected')[0].id;
            moveRecord(id, 1, moveToArchiveURL, redirectionURL);
        });

        $("#btnSaveRecord").on("click", function (e) {

            e.preventDefault();

            var hasFocus = false;
            $("#error_msg").hide();

            // validation
            if ($("#txtname").val().trim() == "") {
                $("#txtname").parent().parent().find('label').addClass('mt-2 text-danger');
                $("#txtname").parent().parent().addClass('has-danger');

                $("#txtname").focus();
                hasFocus = true;
            } else {
                $("#txtname").parent().parent().find('label').removeClass('mt-2 text-danger');
                $("#txtname").parent().parent().removeClass('has-danger');
            }

            if (hasFocus) {
                return false;
            }

            console.log("test");

            $.ajax({
                type: "POST",
                url: saveURL,
                data: {
                    'Id': $("#txtid").val(),
                    'Fullname': $("#txtname").val(),
                    'CityId': $("#ddlcity").val(),
                    'MallId': $("#ddlmall").val(),
                    'Description': $("#description").val(),
                    'LogoImage': $("#hidden_image_name").val(),
                    'Address': $("#txtaddress").val(),
                    'ContactNo': $("#txtcontact").val(),
                    'Email': $("#txtemail").val(),
                    'Active': $("#chkActive").is(':checked'),
                },
                success: function (data) {

                    if (data["ErrorCode"] == "000") {
                        if (data["EntryLevel"] == "1") {
                            SwalSuccesswithRedirect('Success!', 'Record save successfully.', redirectionURL, $("#modal_setup"));
                        } else {
                            var row_index = current_table.$('tr.selected')[0]._DT_RowIndex;
                            var data = current_table.row(row_index).data();

                            data["Active"] = $("#chkActive").is(':checked');
                            data["Name"] = $("#txtname").val();
                            data["City"] ["Id"] = $("#ddlcity").val();
                            data["City"]["Name"] = $("#ddlcity option:selected").text();
                            data["Mall"]["Id"] = $("#ddlmall").val();
                            data["Mall"]["Name"] = $("#ddlmall option:selected").text();
                            data["Description"] = $("#description").val();
                            data["LogoImage"] = $("#hidden_image_name").val();
                            data["Address"] = $("#txtaddress").val();
                            data["ContactNo"] = $("#txtcontact").val();
                            data["Email"] = $("#txtemail").val();

                            current_table.row(row_index).data(data);

                            SwalSuccesswithRedirect('Success!', 'Record edit successfully.', undefined, $("#modal_setup"));
                        }
                    }
                    else {
                        //alert('failed to update record');
                        $("#error_msg").text('failed to update record').show();
                    }
                },
                failure: function (data) {
                    alert(data);
                },
                always: function () {
                    //console.log('i am in always');
                }
            });
        });

        $("#profile_picture").on('click', function () {
            $("#hidden_file").click();
            return false;
        });

        $("#hidden_file").on('change', function (e) {

            e.preventDefault();

            $.ajax({
                url: "/Admin/UploadStoreImage",
                type: "POST",
                data: new FormData(this.form),
                contentType: false,
                cache: false,
                processData: false,
                beforeSend: function () {
                    //$("#preview").fadeOut();
                    //$("#err").fadeOut();
                },
                success: function (data) {
                    console.log(data);
                    if (data['ErrorCode'] == '000') {

                        $("#profile_picture_img").attr('src', '/content/uploads/stores/' + data['FileName']);
                        $("#hidden_image_name").val(data['FileName']);
                    }
                    else if (data['ErrorCode'] == '001') {
                        alert('file not found');
                    } else if (data['ErrorCode'] == '002') {
                        alert('invalid file extension');
                    } else {
                        alert('unhandled exception');
                    }
                },
                error: function (e) {
                    console.log(e);
                    alert(e);
                }
            });
        });

        $("#btn_current").on("click", function (e) {
            e.preventDefault();

            $(".table-archive-listing").hide();
            $(".table-current-listing").fadeIn();

            $("#btn_current").removeClass('btn-outline-success').addClass('btn-success');
            $("#btn_archive").removeClass('btn-danger').addClass('btn-outline-danger');

            $("#edit_popup").show();
            $("#btn_delete").show();
            $("#btn_restore").hide();

            if (current_table.$('tr.selected').length > 0) {
                $("#edit_popup").removeAttr('disabled');
                $("#btn_delete").removeAttr('disabled');
            }
        });

        $("#btn_archive").on("click", function (e) {
            e.preventDefault();

            $(".table-current-listing").hide();
            $(".table-archive-listing").fadeIn();

            $("#btn_current").removeClass('btn-success').addClass('btn-outline-success');
            $("#btn_archive").removeClass('btn-outline-danger').addClass('btn-danger');

            $("#edit_popup").hide();
            $("#btn_delete").hide();
            $("#btn_restore").show();

            $("#edit_popup").attr('disabled', 'disabled');
            $("#btn_delete").attr('disabled', 'disabled');
        });

        $('#modal_setup').on('shown.bs.modal', function () {
            $("#txtname").focus();
        });

        function resetPopup() {
            $("#txtid").val('');
            $("#txtname").val('');
            $("#ddlcity").val('0').trigger('change');
            $("#ddlmall").val('0').trigger('change');
            $("#description").val('');
            $("#hidden_image_name").val('');
            $("#txtaddress").val('');
            $("#txtcontact").val('');
            $("#txtemail").val('');
            $("#chkActive").prop('checked', true);

            $("#txtname").parent().parent().find('label').removeClass('mt-2 text-danger');
            $("#txtname").parent().parent().removeClass('has-danger');
        }

        function bindGrid(table, url) {
            return table.DataTable({
                "ajax": {
                    'type': 'POST',
                    'url': url,
                    'data': {},
                },
                'processing': true,
                'language': {
                    'loadingRecords': '&nbsp;',
                    'processing': '<div class="spinner"><i class="fas fa-spinner fa-spin"></i> Loading...</div>'
                },
                "drawCallback": function () {
                    $('.dataTables_paginate > .pagination').addClass('rounded-flat');
                },
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false,
                }],
                "columns": [
                    {
                        "data": "City",
                        "render": function (data, type, row, meta) {
                            return data["Name"];
                        }
                    },
                    {
                        "data": "Mall",
                        "render": function (data, type, row, meta) {
                            return data["Name"];
                        }
                    },
                    {
                        "data": "LogoImage",
                        "render": function (data, type, row, meta) {
                            if (data == "")
                                return "";
                            else
                                return "<img src='/content/uploads/stores/" + data + "' alt='item' style='height: 50px; width: auto;' />";
                        }
                    },
                    { "data": "Name" },
                    { "data": "Address" },
                    { "data": "ContactNo" },
                    { "data": "Email" },
                    {
                        "data": "Active",
                        "render": function (data, type, row, meta) {
                            return getDataTableStatus(row['Active']);
                        }
                    }
                ]
            });
        }

    </script>
}